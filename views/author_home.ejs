<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Author Home Page</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
</head>
<body>
  <%- include("layouts/navbar", { pageTitle: 'Author Home Page' }) %>

  <div class="container mt-5">
    <h3 class="">Unpublished Articles</h3>
    <a href="/author/new" class="btn btn-primary mb-3">Create New Article</a>
    <div class="row">
      <!-- Filter and display unpublished articles -->
      <% articles.filter(a => !a.published_date).forEach(function(article) { %>
        <div class="col-md-6 mb-3">
          <%- include('./layouts/article_details', { ...article }) %>
        </div>
      <% }); %>
    </div>
  </div>

  <hr class="container">

  <div class="container mt-4">
    <h3 class="mb-3">Published Articles</h3>
    <div class="row">
      <!-- Filter and display published articles -->
      <% articles.filter(a => a.published_date).forEach(function(article) { %>
        <div class="col-md-6 mb-3">
          <%- include('./layouts/article_details', { ...article }) %>
        </div>
      <% }); %>
    </div>
  </div>

  <script>
    function deleteArticle(id) {
      const result = confirm("Confirm deletion of this article?");
      if (result) {
        fetch("/author/delete/" + id, { method: "DELETE" })
          .then((res) => {
            if (res.ok) {
              location.reload();
            } else {
              throw new Error("Deletion Failed!");
            }
          })
          .catch((error) => {
            console.error("Deletion Error: ", error);
          });
      }
    }

    function publishArticle(id) {
      const result = confirm("Publish this article?");
      if (result) {
        fetch("/author/publish/" + id, { method: "POST" })
          .then((res) => {
            if (res.ok) {
              location.reload();
            } else {
              throw new Error("Publish Failed!");
            }
          })
          .catch((error) => {
            console.error("Publish Error:", error);
          });
      }
    }
  </script>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"
  ></script>
</body>
</html>
