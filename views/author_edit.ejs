<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Author Edit Page</title>
    <!-- Bootstrap CSS for styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
</head>
<body>
    <!-- Include the navigation bar with the specified page title -->
    <%- include("layouts/navbar", { pageTitle: 'Author Edit Page' }) %>

    <div class="container mt-5">
        <div class="card mt-5">
            <div class="card-body">
                <h5 class="card-title">Article Details</h5>
                <hr class="my-2">
                <div class="d-flex flex-column">
                    <!-- Display article creation date -->
                    <% if (locals.created_date) { %> 
                        <p class="mb-1"><b>Created:</b> &nbsp; <%= new Date(locals.created_date).toLocaleString() %></p>
                    <% } %> 
                    <!-- Display article modification date -->
                    <% if (locals.modified_date) { %> 
                        <p class="mb-1"><b>Modified:</b> &nbsp; <%= new Date(locals.modified_date).toLocaleString() %></p>
                    <% } %> 
                    <!-- Display article publication date -->
                    <% if (locals.published_date) { %> 
                        <p class="mb-1"><b>Published:</b> &nbsp; <%= new Date(locals.published_date).toLocaleString() %></p>
                    <% } %>
                    <!-- Display article status -->
                    <% if (locals.article_status === 'published') { %>
                        <p class="mb-1"><b>Status:</b> &nbsp; Published</p>
                    <% } else { %>
                        <p class="mb-1"><b>Status:</b> &nbsp; Unpublished</p>
                    <% } %>
                </div>
            </div>
        </div>

        <h2 class="mt-4">Edit Article</h2>
        <hr>
        <form method="post" action="/author/<%= locals.id ? 'edit/'+locals.id : 'new' %>">
            <div class="mb-3">
                <label for="title" class="form-label"><b>Article Title</b></label>
                <input
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    value="<%= locals.title %>"
                    required
                />
            </div>
            <div class="mb-3">
                <label for="subtitle" class="form-label"><b>Article Subtitle</b></label>
                <input
                    type="text"
                    class="form-control"
                    id="subtitle"
                    name="subtitle"
                    value="<%= locals.subtitle %>"
                    required
                />
            </div>
            <div class="mb-3">
                <label for="body" class="form-label"><b>Article Text</b></label>
                <textarea
                    class="form-control"
                    rows="5"
                    id="body"
                    name="body"
                    required
                >
                <%= locals.body %></textarea>
            </div>
            <div class="d-flex justify-content-between mb-5">
                <!-- Back button to return to author home -->
                <a href="/author" role="button" class="btn btn-secondary btn-lg">Back</a>
                <!-- Submit button to update the article -->
                <button type="submit" class="btn btn-primary btn-lg">Update</button>
            </div>
        </form>
    </div>

    <!-- Bootstrap and Popper.js scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
</body>
</html>
